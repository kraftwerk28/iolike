{
  "compilerOptions": {
    "target": "ES6",
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      "common": ["../common/"],
      "common/*": ["../common/*"]
    },
    "moduleResolution": "Node"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules/*",
    "__sapper__/*",
    "public/*"
  ]
}
